{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
